 #define FCONTRACT_COMPONENT_$<compName>_PORT_$<portName>_ACTION_$<actionName>_REQUIRES \
 (FC0_COMPONENT_$<compName>_PORT_$<portName>_ACTION_$<actionName>_REQUIRES)
